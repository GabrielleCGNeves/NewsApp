<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hollywoodone"
            android:text="Noticias sobre Mobilidade"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/idMobilidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/blue"
                android:onClick="expand"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/idLayMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/idImgMob"
                        android:layout_width="304dp"
                        android:layout_height="191dp"
                        android:background="@drawable/mob_carro" />

                    <TextView
                        android:id="@+id/idTitMob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/titVeiculo"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView

                        android:id="@+id/idTextMob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textVeiculo"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/iFarol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idMobilidade"
                android:layout_margin="8dp"
                android:backgroundTint="@color/blue"
                android:onClick="expand1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/idLayFar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/idImgFar"
                        android:layout_width="290dp"
                        android:layout_height="170dp"
                        android:background="@drawable/mob_farol" />

                    <TextView
                        android:id="@+id/idTitFar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titFarol"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/idTextFar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textFarol"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>